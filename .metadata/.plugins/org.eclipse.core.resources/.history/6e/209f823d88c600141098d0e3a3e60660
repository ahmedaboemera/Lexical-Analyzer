NFA::NFA() {
	this->label_counter = 0; // initialized only once beacause it's static
	this->starting_points = new set<int>;
	this->adj_list = new map<int, map<string, set<int>*>*>;
	this->acceptors = new set<Acceptor>;
}

NFA::~NFA() {
	delete starting_points;
	delete adj_list;
	delete acceptors;
}

