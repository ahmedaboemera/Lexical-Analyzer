#include <iostream>
#include "Graph.h"

using namespace std;

Node create_nodes() {
	Node n1 ("1");
	Node n2 ("2");
	Node n3 ("3");

	n1.addNext("a", &n2);
	n2.addNext("b", &n3);
	n3.addNext("", nullptr);

	cout << n1.getLabel() << endl; // prints 1
	cout << n1.getNext("a")->getLabel() << endl; // prints 2
	cout << n1.getNext("a")->getNext("b")->getLabel() << endl;

	return n1;
}

int main() {
	cout << "hello world" << endl;
	cout << "trying the script out..." << endl;

	Graph g;
	Node* n0 = g.add_node();
	Node* n1 = g.add_node();
	Node* n2 = g.add_node();



	g.print_adj_matrix();
}

